<div class="text-center">
  <h1>Cocktail List</h1>
  <div class="table-responsive">
   <table class="table table-striped">
     <tr>
       <td>Name</td>
     </tr>
     <% @cocktails.each do |cocktail| %>
     <tr>
       <td><%=link_to cocktail_path(cocktail) do %>
         <%= cocktail.name %></td>
       </td>
       <% end %>
     </tr>
     <% end %>
   </table>
 </div>
 <p><%= link_to "Add cocktail", new_cocktail_path, class: "btn btn-success"%></p>

</div>
</div>
