<div class="text-center">
  <h1>Cocktail: <%= @cocktail.name %></h1>
  <% @cocktail.doses.each do |dose| %>
  <p>
    <%= dose.description %>
    <%= dose.ingredient.name %>
  </p>
  <%= link_to 'Remove dose', cocktail_dose_path(dose.cocktail_id, dose.id), method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-danger" %>
  <% end %>
  <table class="table">
    <tr>
      <td><%= link_to "Add dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"%></td>
      <td><%= link_to 'Back', cocktails_path, class: "btn btn-info" %></td>
    </tr>
  </table>
</div>
